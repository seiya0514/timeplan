<header>
  <div class="header-left">
    <%= link_to image_tag("logo.png", class:"header-logo"), "/" %>
  </div>

  <div class="header-right">
    <ul class="header-right-ul">
        <li><%= link_to 'ToDoリスト', root_path, class: "header-link" %></li> 
        <li><%= link_to 'ログアウト', destroy_user_session_path,  method: :delete, class: "header-link" %> </li>
    </ul>
  </div>
  
</header>



<div class="toppage">
<h1 class="top"></h1>
<br>

<div class="row">
<div class="col-md-4">
	<div class="schedule">今後の予定一覧</div>
<table class="table">
  <thead class="thead-light">
    <tr class="border">
      <th class="border"><p class="border-text">タイトル</p></th>
      <th class="border"><p class="border-text">日程</p></th>
    </tr>
  </thead>


    <tbody>
      <% @blogs.each do |blog| %>

        <tr>
          <td><%= link_to blog.title , blog %></td>
          <td><%= blog.start_time.strftime("%m-%d") %></td>
        </tr>
      <% end %>
    </tbody>
</table>



<%= form_with(model: @blog, local: true) do |form| %>

  <div class="title">
    <div class="form-tag">タイトル</div>
    <%= form.text_field :title,  class:"form-tag-box"%>
  </div>


  <div class="content">
    <div class="form-tag">内容</div>
    <%= form.text_field :content,  class:"naiyou-box"%>
  </div>

    <div class="time">
    <div class="form-tag">時間</div>
    <%= form.datetime_select :start_time %>
  </div>

 <div class="submit">
    <%= form.submit class:"submit-box"%>
 </div>
<% end %>
</div>

<br>


<br>
<div class="col-md-8">
 <p class="user-calendar"><%= current_user.name %>さんのカレンダー</p> 
<%= month_calendar events: @blogs do |date, blogs| %>
  <%= date.day %>
    <% blogs.each do |blog| %>
      <div>
        <%= link_to blog.title, blog %>
      </div>
    <% end %>
<% end %>
</div>
</div>
</div>

<footer>

</footer>